@model SistemaCitasMedicas.Models.Cita
@using SistemaCitasMedicas.Models

@{
    ViewBag.Title = "ConsultaCitasMedicas";
    var usuario = (Usuario)Session["usuario"];
}

<body class="sb-nav-fixed">
    @Html.Partial("_AdminMenuSuperior")
    <div id="layoutSidenav">
        @Html.Partial("_AdminMenu")
        <div id="layoutSidenav_content">
            <main class="container-md">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="pt-3 text-secondary text-uppercase">Consulas Citas Medicas</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="card">
                            <h4 class="text-center font-monospace fw-bold  card-header">Formulario de cita medica</h4>
                            <div class="m-3">
                                <div class="row g-3 mb-3" hidden>
                                    <div class="col-md-6">
                                        <label class="form-label">ID Cita</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.idcita, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.idcita, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">ID Medico</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.idmedico, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.idmedico, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Paciente</label>
                                        <div class="input-group">
                                            <span class="input-group-text bi bi-person-fill"></span>
                                            @Html.DropDownListFor(model => model.idusuario, ViewBag.paciente as SelectList,"Nombre de paciente", new { @class = "form-control", disabled = "" })
                                            <!--
                                                Html.DropDownList("idusuario", ViewBag.paciente as SelectList, "Nombre de paciente", new { class = "form-control" })
                                                Html.EditorFor(model => model.idusuario, new { htmlAttributes = new { class = "form-control" } })
                                            -->
                                            @Html.ValidationMessageFor(model => model.idusuario, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Fecha de reserva</label>
                                        <div class="input-group">
                                            <span class="input-group-text bi bi-calendar-check-fill"></span>
                                            @Html.TextBoxFor(model => model.fechacita, new { @class = "form-control", type = "datetime", disabled = "" })
                                            <!--Html.EditorFor(model => model.fechacita, new { htmlAttributes = new { class = "form-control", type = "datetime" } })-->
                                            @Html.ValidationMessageFor(model => model.fechacita, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Hora de cita</label>
                                        <div class="input-group">
                                            <span class="input-group-text bi bi-clock-fill"></span>
                                            @Html.TextBoxFor(model => model.horacita, new { @class = "form-control", type = "time", disabled = "" })
                                            @Html.ValidationMessageFor(model => model.horacita, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Estado de la cita</label>
                                        <div class="input-group">
                                            <span class="input-group-text bi bi-clipboard-minus"></span>
                                            @Html.DropDownList("idestado", ViewBag.estados as SelectList, new { @class = "form-select" })
                                            @Html.ValidationMessageFor(model => model.idestado, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Observaciones</label>
                                        <div class="">
                                            @Html.TextAreaFor(model => model.observaciones, 5, 5, new { @class = "form-control", placeholder = "Ingrese las observaciones del paciente" })
                                            @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Prescripción</label>
                                        <div class="">
                                            @Html.TextAreaFor(model => model.prescripcion, 5, 5, new { @class = "form-control", placeholder = "Ingrese la prescripción o receta del paciente" })
                                            @Html.ValidationMessageFor(model => model.prescripcion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3 mb-3">
                                    
                                    

                                </div>
                                <div class="mt-3">
                                    <div class="d-flex justify-content-around">
                                        @Html.ActionLink("Limpiar", "ConsultaCitasMedicas", new { idcit = "" }, new { @class = "btn btn-secondary text-uppercase fw-bold" })
                                        <!--<input type="submit" name="btnactualizar" value="Actualizar" class="btn btn-primary text-uppercase fw-bold" />-->
                                        <a class="btn btn-danger text-uppercase fw-bold bi bi-file-earmark-pdf-fill" href=""> Generar pdf</a>
                                        <input type="button" class="btn btn-primary text-uppercase fw-bold" data-bs-toggle="modal" data-bs-target="#abrirModalPago" value="Atender" />
                                        
                                        <div class="modal fade" id="abrirModalPago" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">

                                                <div class="modal-content bg-secondary">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title text-uppercase text-white" id="exampleModalLabel">Pago cita medica</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row g-3 mb-3">
                                                            <div class="col-md-6">
                                                                <label class="form-label fw-bold text-white">Nro de tarjeta</label>
                                                                <div class="">
                                                                    <input class="form-control" type="number" placeholder="Ingrese su Nro de tarjeta" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label class="form-label fw-bold text-white">CVV</label>
                                                                <div class="">
                                                                    <input class="form-control" type="number" placeholder="Ingrese su CVV" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row g-3 mb-3">
                                                            <div class="col-md-6">
                                                                <label class="form-label fw-bold text-white">Pago de la cita</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text">S/.</span>
                                                                    @Html.EditorFor(model => model.pagocita, new { htmlAttributes = new { @class = "form-control" } })
                                                                    @Html.ValidationMessageFor(model => model.pagocita, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label fw-bold text-white">Precio de la cita</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text">S/.</span>
                                                                    @Html.TextBoxFor(model => model.preciocita, new { @class = "form-control", type = "text", disabled = "" })
                                                                    @Html.ValidationMessageFor(model => model.preciocita, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="submit" name="btnactualizar" value="Pagar" class="btn btn-success text-uppercase fw-bold" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
                <div>
                    @ViewBag.mensaje
                </div>
                <div>
                    @Html.Partial("_vListCita", ViewBag.citasdemedico as IEnumerable<CitaList1>)
                </div>
            </main>
        </div>
    </div>
</body>

