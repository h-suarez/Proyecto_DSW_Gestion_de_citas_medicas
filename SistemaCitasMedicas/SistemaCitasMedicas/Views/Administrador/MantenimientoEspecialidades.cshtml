@model SistemaCitasMedicas.Models.Especialidad
@using SistemaCitasMedicas.Models

@{
    ViewBag.Title = "MantenimientoEspecialidades";
    var usuario = (Usuario)Session["usuario"];
}

<body class="sb-nav-fixed">
    @Html.Partial("_AdminMenuSuperior")
    <div id="layoutSidenav">
        @Html.Partial("_AdminMenu")
        <div id="layoutSidenav_content">
            <main class="container-md">
                @using (Html.BeginForm("MantenimientoEspecialidades", "Administrador", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="pt-3 text-secondary text-uppercase">Mantenimiento Especialidades</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="card">
                            <h4 class="text-center font-monospace fw-bold  card-header">Formulario de especialidad</h4>
                            <div class="m-3">
                                <div class="row g-3 mb-3">
                                    <div class="col-md-6" hidden>
                                        <label class="form-label">ID Especialidad</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.idespecialidad, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.idespecialidad, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Imagen</label>
                                        <div class="">
                                            @Html.TextBox("archivo","", new { type= "file", accept = "image/*", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.fotoesp, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Nombre</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.nombreesp, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese nombre de especialidad" } })
                                            @Html.ValidationMessageFor(model => model.nombreesp, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                        
                                <div class="row g-3 mb-4">
                                    <div class="col-md-12">
                                        <label class="form-label">Descripción</label>
                                        <div class="">
                                            @Html.TextAreaFor(model => model.descripcionesp, 5,5, new {@class = "form-control", placeholder = "Ingrese descripción de especialidad" })
                                            @Html.ValidationMessageFor(model => model.descripcionesp, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <div class="d-flex justify-content-around">
                                        @Html.ActionLink("Limpiar", "MantenimientoEspecialidades", new { idesp = "" }, new { @class = "btn btn-secondary text-uppercase fw-bold" })
                                        <input type="submit" name="btncrud" value="Registrar" class="btn btn-success text-uppercase fw-bold" />
                                        <input type="submit" name="btncrud" value="Editar" class="btn btn-primary text-uppercase fw-bold" />
                                    </div>
                                </div>

                            </div>
                        </div>
                        
                    </div>
                }
                <div>
                    @ViewBag.mensaje
                </div>

                <div>
                    @Html.Partial("_vListEspecialidad", ViewBag.especialidades as IEnumerable<Especialidad>)
                </div>
            </main>
            @Html.Partial("_AdminFooter")
        </div>

    </div>

</body>

