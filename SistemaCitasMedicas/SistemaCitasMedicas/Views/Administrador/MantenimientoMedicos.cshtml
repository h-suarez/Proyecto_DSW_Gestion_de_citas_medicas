@model SistemaCitasMedicas.Models.Medico
@using SistemaCitasMedicas.Models

@{
    ViewBag.Title = "MantenimientoMedicos";
    var usuario = (Usuario)Session["usuario"];
}

<body class="sb-nav-fixed">
    @Html.Partial("_AdminMenuSuperior")
    <div id="layoutSidenav">
        @Html.Partial("_AdminMenu")
        <div id="layoutSidenav_content">
            <main class="container-md">
                @using (Html.BeginForm("MantenimientoMedicos", "Administrador", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="pt-3 text-secondary text-uppercase">Mantenimiento Medicos</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="card">
                            <h4 class="text-center font-monospace fw-bold  card-header">Formulario del medico</h4>
                            <div class="m-3">

                                <div class="row g-3 mb-3">
                                    <div class="col-md-6" hidden>
                                        <label class="form-label">ID Medico</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.idmedico, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.idmedico, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Foto del medico</label>
                                        <div class="">
                                            @Html.TextBox("archivo", "", new { type = "file", accept = "image/*", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.fotomed, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Especialidad</label>
                                        <div class="">
                                            @Html.DropDownList("idespecialidad", ViewBag.especialidades as SelectList, new { @class = "form-select" })
                                            @Html.ValidationMessageFor(model => model.idespecialidad, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Hora de inicio</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.horaini, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                                            @Html.ValidationMessageFor(model => model.horaini, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Hora de fin</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.horafin, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                                            @Html.ValidationMessageFor(model => model.horafin, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="card row mb-3 mx-0">
                                    <h4 class="text-center font-monospace fw-bold card-header">Información de cuenta</h4>
                                    <div class="row mb-3">
                                        <div class="col-md-8 my-4">
                                            <h5 class="form-label fw-bold font-monospace">Cuenta del medico</h5>
                                            <div class="input-group">
                                                @Html.DropDownList("idcuenta", ViewBag.cuentas as SelectList,"Seleccione una cuenta", new { @class = "form-select"})
                                                <!--button class="btn btn-outline-success">Consultar</button-->
                                                @Html.ValidationMessageFor(model => model.idcuenta, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-4 my-4">
                                            <h5 class="form-label fw-bold font-monospace">Edite el tipo de la cuenta</h5>
                                            <div class="">
                                                @Html.ActionLink("Editar cuenta", "MantenimientoUsuarios", new { idusu = Model.idcuenta }, new { @class = "btn btn-outline-primary text-uppercase" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <h5 class="form-label fw-bold font-monospace">El medico tiene cuenta?</h5>
                                        <div>
                                            @Html.ActionLink("Crear cuenta", "MantenimientoUsuarios", null, new { @class = "btn btn-outline-success text-uppercase my-2" })
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-4">
                                    <div class="d-flex justify-content-around">
                                        @Html.ActionLink("Limpiar", "MantenimientoMedicos", new { idmed = "" }, new { @class = "btn btn-secondary text-uppercase fw-bold" })
                                        <input type="submit" name="btncrud" value="Registrar" class="btn btn-success text-uppercase fw-bold" />
                                        <input type="submit" name="btncrud" value="Editar" class="btn btn-primary text-uppercase fw-bold" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
                <div>
                    @ViewBag.mensaje
                </div>

                <div>
                    @Html.Partial("_vListMedico", ViewBag.medicos as IEnumerable<MedicoList1>)
                </div>
            </main>
            @Html.Partial("_AdminFooter")
        </div>
    </div>
</body>

